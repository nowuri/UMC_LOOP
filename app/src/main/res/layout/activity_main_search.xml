<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="24dp"
    android:layout_marginBottom="48dp"
    android:background="#1D2D69"
    tools:context=".MainActivity_interest">
    <View
        android:layout_width="380dp"
        android:layout_height="850dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/backWhite"/>
    <View
        android:layout_width="380dp"
        android:layout_height="61dp"
        android:background="#1D2D69"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/backWhite"
        android:id="@+id/titleback"/>
    <ImageView
        android:layout_width="42.95dp"
        android:layout_height="45.51dp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="@id/titleback"
        app:layout_constraintStart_toStartOf="@id/titleback"
        app:layout_constraintBottom_toBottomOf="@id/titleback"
        android:layout_marginLeft="13dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOPE"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/titleback"
        app:layout_constraintTop_toTopOf="@id/titleback"
        app:layout_constraintBottom_toBottomOf="@id/titleback"
        android:layout_marginLeft="12dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:id="@+id/login"
        android:background="@drawable/login_btn"
        app:layout_constraintTop_toTopOf="@id/titleback"
        app:layout_constraintBottom_toBottomOf="@id/titleback"
        app:layout_constraintEnd_toEndOf="@id/titleback"/>
    <Spinner
        android:layout_width="80dp"
        android:layout_height="39dp"
        app:layout_constraintTop_toBottomOf="@id/titleback"
        app:layout_constraintStart_toStartOf="@id/backWhite"
        android:background="@drawable/spinner_background"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/spinner"/>

    <ImageButton
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:src="@drawable/search"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/titleback"
        app:layout_constraintStart_toEndOf="@id/spinner"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="6dp"
        android:id="@+id/search"/>

    <EditText
        android:id="@+id/searchinput"
        android:layout_width="220dp"
        android:layout_height="39dp"
        app:layout_constraintTop_toBottomOf="@id/titleback"
        app:layout_constraintStart_toEndOf="@id/search"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@id/backWhite"
        app:layout_constraintTop_toBottomOf="@id/searchinput"
        android:layout_marginRight="18dp"
        android:layout_marginTop="15dp"
        android:id="@+id/Choose">
        <Button
            android:id="@+id/field"
            android:layout_width="34dp"
            android:layout_height="14dp"
            android:background="@drawable/search_btn"
            android:text="분야별"
            android:textSize="12sp"
            android:textColor="#1D2D69"/>
        <Button android:id="@+id/region"
            android:layout_width="34dp"
            android:layout_height="14dp"
            android:background="@drawable/search_btn"
            android:text="지역별"
            android:textSize="12sp"
            android:textColor="#1D2D69" android:layout_marginLeft="7dp"/>
    </LinearLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="350dp"
        android:layout_height="31dp"
        app:tabBackground="@drawable/tab_background"
        app:layout_constraintTop_toBottomOf="@id/Choose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpAdapter"
        android:layout_width="350dp"
        android:layout_height="600dp"
        app:layout_constraintTop_toBottomOf="@id/tablayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#1D2D69"/>
</androidx.constraintlayout.widget.ConstraintLayout>