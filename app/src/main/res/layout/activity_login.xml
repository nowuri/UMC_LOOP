<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="24dp"
    android:layout_marginBottom="48dp"
    android:background="#1D2D69"
    android:clipToPadding="false"
    tools:context="com.example.login.Login">

    <View
        android:layout_width="380dp"
        android:layout_height="781dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="#1D2D69"
        android:id="@+id/Toptitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:layout_width="42.95dp"
        android:layout_height="42.95dp"
        app:layout_constraintTop_toTopOf="@id/Toptitle"
        app:layout_constraintStart_toStartOf="@id/Toptitle"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/logo1"
        android:id="@+id/logoTop"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_btn"
        android:text="로그인"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/Toptitle"
        android:layout_marginTop="8dp"
        android:id="@+id/login"
        android:textSize="12sp"
        android:textStyle="bold"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:text="로그인"
        android:textColor="#1D2D69"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/Toptitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="27dp"
        android:id="@+id/title"
        android:layout_marginLeft="60dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:orientation="vertical"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="28dp">

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="55dp"
            android:background="@drawable/naverlogin"
            android:id="@+id/naverlogin"
            android:layout_marginTop="28dp">
            <ImageView
                android:layout_width="34dp"
                android:layout_height="56dp"
                android:src="@drawable/naver"
                android:layout_marginLeft="13dp"/>
            <TextView
                android:layout_width="188dp"
                android:layout_height="33dp"
                android:text="네이버로 로그인"
                android:textStyle="bold"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="55dp"
            android:background="@drawable/kakologin"
            android:id="@+id/kakologin"
            android:layout_marginTop="35dp">
            <ImageView
                android:layout_width="34dp"
                android:layout_height="56dp"
                android:src="@drawable/kakao"
                android:layout_marginLeft="13dp"/>
            <TextView
                android:layout_width="188dp"
                android:layout_height="33dp"
                android:text="카카오로 로그인"
                android:textStyle="bold"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

        <Button
            android:layout_width="270dp"
            android:layout_height="55dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_signup_style"
            android:text="로그인"
            android:id="@+id/loginbtn"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입"
                android:id="@+id/signup"
                android:background="@color/white"
                android:textSize="16dp"
                android:textColor="#1D2D69"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디 | 비번찾기"
                android:id="@+id/find"
                android:textSize="16dp"
                android:layout_marginLeft="34dp"
                android:background="@color/white"
                android:textColor="#1D2D69"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>