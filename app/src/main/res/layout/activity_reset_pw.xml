<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="24dp"
    android:layout_marginBottom="48dp"
    android:background="#1D2D69"
    android:clipToPadding="false"
    tools:context="com.example.find.ResetPW">


    <View
        android:layout_width="380dp"
        android:layout_height="781dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="#1D2D69"
        android:id="@+id/Toptitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:layout_width="42.95dp"
        android:layout_height="42.95dp"
        app:layout_constraintTop_toTopOf="@id/Toptitle"
        app:layout_constraintStart_toStartOf="@id/Toptitle"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/logo1"
        android:id="@+id/logoTop"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_btn"
        android:text="로그인"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/Toptitle"
        android:layout_marginTop="8dp"
        android:id="@+id/login"
        android:textSize="12sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:text="비밀번호 재설정"
        android:textColor="#1D2D69"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/Toptitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/title"/>

    <View
        android:layout_width="285dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:background="#1D2D69"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:id="@+id/titleline"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/titleline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="36dp"
        android:id="@+id/inputlayout"
        android:layout_marginLeft="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1D2D69"
            android:id="@+id/pw"/>

        <EditText
            android:layout_width="265dp"
            android:layout_height="35dp"
            android:textColor="@color/black"
            android:background="@drawable/find_back"
            android:layout_marginTop="13dp"
            android:id="@+id/pwinput"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 확인"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="31dp"
            android:textColor="#1D2D69"
            android:id="@+id/pwcheck"/>

        <EditText
            android:layout_width="265dp"
            android:layout_height="35dp"
            android:textColor="@color/black"
            android:background="@drawable/find_back"
            android:layout_marginTop="13dp"
            android:id="@+id/pwcheckinput"/>

        <Button
            android:layout_width="276dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/vpfind"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/btn_signup_style"
            android:text="완료"
            android:layout_marginTop="60dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:id="@+id/endbutton"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>