<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="24dp"
    android:layout_marginBottom="48dp"
    android:background="#1D2D69"
    android:clipToPadding="false"
    tools:context="com.example.find.ResetPW">

    <View
        android:layout_width="380dp"
        android:layout_height="781dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="#1D2D69"
        android:id="@+id/Toptitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:layout_width="42.95dp"
        android:layout_height="42.95dp"
        app:layout_constraintTop_toTopOf="@id/Toptitle"
        app:layout_constraintStart_toStartOf="@id/Toptitle"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/logo1"
        android:id="@+id/logoTop"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_btn"
        android:text="로그인"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/Toptitle"
        android:layout_marginTop="8dp"
        android:id="@+id/login"
        android:textSize="12sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:text="비밀번호 재설정"
        android:textColor="#1D2D69"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Toptitle"
        android:layout_marginTop="24dp"
        android:id="@+id/title"/>

    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="#1D2D69"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:id="@+id/line"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:text="이름"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="28dp"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:layout_marginTop="31dp"
        android:textColor="#1D2D69"/>

    <EditText
        android:layout_width="276dp"
        android:layout_height="35dp"
        android:background="@drawable/find_back"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:id="@+id/pwinput"
        android:layout_marginLeft="28dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="13dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:text="이메일"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pwinput"
        android:textColor="#1D2D69"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="31dp"/>

    <EditText
        android:layout_width="276dp"
        android:layout_height="35dp"
        android:background="@drawable/find_back"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/email"
        android:layout_marginLeft="28dp"
        android:id="@+id/pwcheckinput"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="13dp"/>

    <Button
        android:layout_width="276dp"
        android:layout_height="40dp"
        android:text="완료"
        android:id="@+id/endbutton"
        android:textColor="@color/white"
        android:background="@drawable/btn_signup_style"
        android:textSize="20sp"
        android:layout_marginLeft="28dp"
        app:layout_constraintTop_toBottomOf="@id/emailinput"
        android:layout_marginTop="69dp"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>